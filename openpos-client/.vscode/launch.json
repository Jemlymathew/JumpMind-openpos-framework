{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    //
    // To attach attach to existing Chrome instance, use this command to launch Chrome:
    // in remote debugging mode (on Mac OS):
    //
    //   /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --remote-debugging-port=9222
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to OpenPOS Chrome instance",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:4200/pos",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch OpenPOS Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}"
        }
    ]
}